<script>
  function sortear() {
    var numeroSorteado = Math.floor(Math.random() * 100) + 1;
    document.getElementById("numero").innerText = "Número sorteado: " + numeroSorteado;
  }

  function reiniciar() {
    document.getElementById("numero").innerText = "Número sorteado: ";
  }
</script>

